{
  "$schema": "./schema.json",
  "code": "wordpress",
  "name": "WordPress",
  "description": "Create a place for your business, your interests, or anything elseâ€”with the open source platform that powers the web.",
  "icon": "https://raw.githubusercontent.com/zeabur/service-icons/main/marketplace/WordPress.svg",
  "image": "wordpress:6-php8.2",
  "command": null,
  "args": null,
  "port": 80,
  "network": "HTTP",
  "dataPath": "/var/www/html",
  "variables": [
    {
      "name": "WORDPRESS_DB_USER",
      "value": "${MYSQL_USERNAME}"
    },
    {
      "name": "WORDPRESS_DB_PASSWORD",
      "value": "${MYSQL_PASSWORD}"
    },
    {
      "name": "WORDPRESS_DB_NAME",
      "value": "wordpress"
    },
    {
      "name": "WORDPRESS_DEBUG",
